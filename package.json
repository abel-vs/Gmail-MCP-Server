{
  "name": "@gongrzhe/server-gmail-autoauth-mcp",
  "version": "2.0.0",
  "description": "Gmail MCP server with multi-account support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gmail-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts src/auth/*.ts src/handlers/*.ts src/schemas/*.ts src/services/*.ts src/types/*.ts src/utils/*.ts src/filter-manager.ts src/label-manager.ts --outdir=dist --format=esm --platform=node --target=node18",
    "build:tsc": "NODE_OPTIONS='--max-old-space-size=8192' tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "auth": "node dist/index.js auth",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "gmail",
    "mcp",
    "cursor",
    "ai",
    "oauth",
    "model-context-protocol",
    "google-gmail",
    "claude",
    "auto-auth"
  ],
  "author": "gongrzhe",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gongrzhe/server-gmail-autoauth-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/gongrzhe/server-gmail-autoauth-mcp/issues"
  },
  "homepage": "https://github.com/gongrzhe/server-gmail-autoauth-mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@types/mime-types": "^2.1.4",
    "gaxios": "^7.1.3",
    "google-auth-library": "^9.4.1",
    "googleapis": "^129.0.0",
    "mcp-evals": "^1.0.18",
    "mime-types": "^3.0.1",
    "nodemailer": "^7.0.3",
    "open": "^10.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.17",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.3"
  }
}
